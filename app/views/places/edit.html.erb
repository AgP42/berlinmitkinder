<div class="pt-5 container">

  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h2>Edit <%= @place.name %> - <%= @place.address %></h2>
        <div class="form-inputs">

          <%= simple_form_for(@place) do |f| %>
              <%= f.input :name %>
              <%= f.input :address %>
              <%= f.association :services,   as: :check_boxes %>
              <%= f.input :image1 %>
              <%= f.input :image1_cache, as: :hidden %>
              <%= f.input :image2 %>
              <%= f.input :image2_cache, as: :hidden %>
              <%= f.input :image3 %>
              <%= f.input :image3_cache, as: :hidden %>
              <%= f.input :image4 %>
              <%= f.input :image4_cache, as: :hidden %>
              <%= f.input :ext_link %>
              <%= f.input :comment %>

            <div class="form-actions">
              <%= f.submit "Save", class: "btn btn-primary mb-5" %>
            </div>
              <%= link_to "Delete", @place, method: :delete, data: { confirm: "Are you sure you want to delete this place?"} %>
          <% end %>
        </div>
    </div>
  </div>
</div>
